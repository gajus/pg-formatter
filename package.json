{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "bin": {
    "pg-formatter": "dist/bin/index.js"
  },
  "dependencies": {
    "shell-quote": "^1.7.2",
    "yargs": "^17.2.1"
  },
  "description": "PostgreSQL SQL syntax beautifier.",
  "devDependencies": {
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/github": "^8.0.7",
    "@semantic-release/npm": "^9.0.2",
    "ava": "^2.4.0",
    "cspell": "^6.31.1",
    "eslint": "^8.39.0",
    "eslint-config-canonical": "^41.0.3",
    "husky": "^8.0.0",
    "semantic-release": "^20.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=16"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "beautifier",
    "formatter",
    "postgres",
    "sql"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "pg-formatter",
  "repository": {
    "type": "git",
    "url": "git@github.com:gajus/pg-formatter.git"
  },
  "scripts": {
    "build": "rm -fr ./dist && tsc --project tsconfig.build.json",
    "lint:cspell": "cspell './**/*.{ts,tsx}' --no-progress --gitignore",
    "lint:eslint": "eslint .",
    "lint:tsc": "tsc",
    "postinstall": "rm -fr ./src/pg-formatter && mkdir -p ./src/pg-formatter && curl -LkSs https://github.com/darold/pgFormatter/archive/refs/tags/v5.5.tar.gz | tar xz --strip-components=1 -C ./src/pg-formatter && cp -R ./src/pg-formatter ./dist/pg-formatter",
    "prepare": "husky install",
    "test:ava": "ava --serial --verbose"
  },
  "types": "./dist/index.d.ts",
  "version": "1.0.0"
}
