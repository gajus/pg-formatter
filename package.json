{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "files": [
      "test/**/*"
    ],
    "helpers": [
      "test/helpers/**/*"
    ],
    "require": [
      "@babel/register"
    ],
    "sources": [
      "src/**/*"
    ]
  },
  "bin": {
    "pg-formatter": "dist/bin/index.js"
  },
  "dependencies": {
    "shell-quote": "^1.7.2",
    "yargs": "^17.2.1"
  },
  "description": "PostgreSQL SQL syntax beautifier.",
  "devDependencies": {
    "@babel/cli": "^7.6.4",
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-flow-strip-types": "^7.6.3",
    "@babel/preset-env": "^7.6.3",
    "@babel/register": "^7.6.2",
    "ava": "^2.4.0",
    "babel-plugin-istanbul": "^5.2.0",
    "coveralls": "^3.0.7",
    "eslint": "^6.8.0",
    "eslint-config-canonical": "^19.0.0",
    "flow-bin": "^0.111.1",
    "husky": "^3.0.9",
    "nyc": "^14.1.1",
    "semantic-release": "^15.13.30"
  },
  "engines": {
    "node": ">=10.0"
  },
  "keywords": [
    "beautifier",
    "formatter",
    "postgres",
    "sql"
  ],
  "main": "./dist/index.js",
  "name": "pg-formatter",
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "text-lcov"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gajus/pg-formatter.git"
  },
  "scripts": {
    "build": "rm -fr ./dist && babel ./src --out-dir ./dist --copy-files --source-maps",
    "build-pg-formatter": "rm -fr ./src/pg-formatter && mkdir -p ./src/pg-formatter && curl -LkSs https://github.com/darold/pgFormatter/archive/refs/tags/v4.4.tar.gz | tar xz --strip-components=1 -C ./src/pg-formatter",
    "lint:eslint": "eslint ./src ./test",
    "lint:flow": "flow",
    "test:ava": "ava --serial --verbose"
  },
  "version": "1.0.1",
  "license": "BSD-3-Clause"
}
