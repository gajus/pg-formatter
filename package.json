{
  "author": {
    "email": "gajus@gajus.com",
    "name": "Gajus Kuizinas",
    "url": "http://gajus.com"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ],
    "require": [
      "ts-node/register/transpile-only"
    ]
  },
  "bin": {
    "pg-formatter": "dist/bin/index.js"
  },
  "dependencies": {
    "shell-quote": "^1.7.2",
    "yargs": "^17.2.1"
  },
  "description": "PostgreSQL SQL syntax beautifier.",
  "devDependencies": {
    "ava": "^2.4.0",
    "babel-plugin-istanbul": "^5.2.0",
    "coveralls": "^3.0.7",
    "cspell": "^6.31.1",
    "eslint": "^8.39.0",
    "eslint-config-canonical": "^41.0.3",
    "husky": "^3.0.9",
    "nyc": "^14.1.1",
    "semantic-release": "^15.13.30",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "engines": {
    "node": ">=10.0"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "beautifier",
    "formatter",
    "postgres",
    "sql"
  ],
  "license": "BSD-3-Clause",
  "main": "./dist/index.js",
  "name": "pg-formatter",
  "nyc": {
    "include": [
      "src/**/*.js"
    ],
    "instrument": false,
    "reporter": [
      "text-lcov"
    ],
    "require": [
      "@babel/register"
    ],
    "sourceMap": false
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:gajus/pg-formatter.git"
  },
  "scripts": {
    "build-pg-formatter": "rm -fr ./src/pg-formatter && mkdir -p ./src/pg-formatter && curl -LkSs https://github.com/darold/pgFormatter/archive/refs/tags/v4.4.tar.gz | tar xz --strip-components=1 -C ./src/pg-formatter",
    "build": "rm -fr ./dist && tsc --project tsconfig.build.json",
    "lint:cspell": "cspell './**/*.{ts,tsx}' --no-progress --gitignore",
    "lint:eslint": "eslint ./src ./test",
    "lint:flow": "tsc",
    "test:ava": "ava --serial --verbose"
  },
  "types": "./dist/index.d.ts",
  "version": "1.0.0"
}
